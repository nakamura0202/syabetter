<%= form_for(@syabettere, url: choose_new_or_edit) do |f| %>
 <% if @syabettere.errors.any? %>
  <div id= "error_explanation">
    <h2><%= @syabettere.errors.count %>件のエラーがあります。</h2>
  
   <ul>
     <% @syabettere.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
    <% end %>
   </ul>
  </div>
 <% end %>
<br>
 <%= f.label :内容 %>
 <%= f.text_field :content, class: 'form-control' %>
<br>
 <%= f.submit '投稿', class: 'btn btn-danger' %>
<% end %>