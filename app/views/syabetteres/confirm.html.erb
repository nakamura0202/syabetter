  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

<h3>以下の内容でべしゃる</h3>

<%= form_for(@syabettere) do |f| %>
 <%= f.hidden_field :title %>
 <%= f.hidden_field :content %>
 
 <p>タイトル:<%= @syabettere.title %></p>
